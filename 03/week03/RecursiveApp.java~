package week03;


public class RecursiveApp{

    public static void main (String[] args){



    }

    public static long digits(long n){
        long num_digits = 0;
        while (n > 0){
            n = n / 10;
            num_digits ++;
        }

        return num_digits;

    }

    public static long sumOfDigits(long n){
        long sum = 0;
        while ( n > 0){
            sum = sum + n % 10;
            n = n / 10;

        }

        return sum;

    }

}
